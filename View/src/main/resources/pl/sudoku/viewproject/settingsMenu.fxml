<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.sudoku.viewproject.SettingsMenu">
   <VBox alignment="CENTER_LEFT" layoutX="123.0" layoutY="40.0" prefHeight="230.0" prefWidth="407.0">
      <Label fx:id="settingsTitle" prefHeight="92.0" prefWidth="387.0" text="%settings">
         <font>
            <Font name="Comic Sans MS" size="65.0" />
         </font>
      </Label>
      <Label alignment="TOP_LEFT" prefHeight="38.0" prefWidth="242.0" text="%lang">
         <font>
            <Font name="Comic Sans MS" size="27.0" />
         </font>
      </Label>
      <RadioButton fx:id="radio_pl" mnemonicParsing="false" onAction="#setLangPL" prefHeight="28.0" prefWidth="213.0" text="%radio_pl">
         <toggleGroup>
            <ToggleGroup fx:id="language" />
         </toggleGroup>
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="radio_en" mnemonicParsing="false" onAction="#setLangEN" prefHeight="30.0" prefWidth="240.0" text="%radio_en" toggleGroup="$language">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </RadioButton>
   </VBox>
   <Button fx:id="menuButton" layoutX="20.0" layoutY="21.0" mnemonicParsing="false" onAction="#returnToMenu" text="%menuButton" />
</AnchorPane>
